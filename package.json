{
    "name": "@kapeta/nodejs-api-client",
    "version": "0.1.1",
    "description": "Kapeta API client for node",
    "license": "MIT",
    "type": "commonjs",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/esm/index.d.ts",
                "default": "./dist/esm/index.js"
            },
            "require": {
                "types": "./dist/cjs/index.d.cts",
                "default": "./dist/cjs/index.js"
            }
        }
    },
    "types": "./dist/esm/index.d.ts",
    "main": "./dist/cjs/index.js",
    "scripts": {
        "clean": "rm -rf ./dist",
        "build:esm": "tsc --module esnext --outDir ./dist/esm && echo '{\"type\":\"module\"}' > ./dist/esm/package.json",
        "build:cjs": "tsc --module commonjs --outDir ./dist/cjs && echo '{\"type\":\"commonjs\"}' > ./dist/cjs/package.json",
        "build": "npm run clean && npm run build:esm && npm run build:cjs",
        "prepublishOnly": "npm run build",
        "test": "echo perfect",
        "format": "prettier --write ."
    },
    "dependencies": {
        "@kapeta/local-cluster-config": "<2",
        "jwt-decode": "^3.1.2",
        "request": "^2.88.2"
    },
    "devDependencies": {
        "@kapeta/prettier-config": "^0.6.0",
        "@tsconfig/node18": "^18.2.0",
        "@types/jwt-decode": "^3.1.0",
        "@types/node": "^20.4.4",
        "@types/request": "^2.48.8",
        "prettier": "^2.8.8",
        "typescript": "^5.1.6"
    },
    "prettier": "@kapeta/prettier-config",
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            [
                "@semantic-release/changelog",
                {
                    "changelogFile": "CHANGELOG.md"
                }
            ],
            "@semantic-release/npm",
            "@semantic-release/github",
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "CHANGELOG.md",
                        "package.json",
                        "package-lock.json"
                    ],
                    "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
                }
            ]
        ]
    }
}
